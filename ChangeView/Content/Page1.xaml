<UserControl x:Class="ChangeView.Content.Page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChangeView.Content"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Page 1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Foreground="#72ACAB" TextAlignment="Justify" FontWeight="ExtraBold" />

        <Button Grid.Column="1" Content="Show Page2" Click="Button_Click" Background="#252526" Foreground="#333333" />
    </Grid>
</UserControl>
